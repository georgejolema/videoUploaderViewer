<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link asp href="~/content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/content/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/content/css/font-awesome.css" rel="stylesheet" />
    <link href="~/content/css/spinkit.css" rel="stylesheet" />
    <link href="~/content/css/style.css" rel="stylesheet" />
    <link href="~/content/css/upload.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#mainnav" aria-expanded="false">
                    <span class="sr-only">Toogle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">Brand</a>
            </div>

            <div class="collapse navbar-collapse" id="mainnav">
                <ul class="nav navbar-nav">
                    <li>
                        <a asp-action="Register" asp-controller="Account">Register</a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Upload">Upload videos</a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Videos">Videos</a>
                    </li>
                </ul>
               @await Html.PartialAsync("_LoginPartial",ViewData["userViewData"])
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>    
    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
    <script src="~/scripts/jquery.js"></script>
    <script src="~/scripts/bootstrap.js"></script>
    <script src="~/scripts/easyupload.js"></script>
    <script src="~/scripts/watch.js"></script>
    <script src="~/scripts/upload.js"></script>
    
</body>
</html>
